# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{c,C,cpp,cxx,cc,h,hpp}]
indent_style = space
indent_size = 2

[*.pl]
indent_size = 4

[*.{raku,rakumod,rakutest}]
indent_size = 2

[*.ps1]
indent_size = 4

[*.{sh,bash}]
indent_size = 2

[Makefile,makefile,*.{mk,make,makefile}]
indent_style = tab

# 使用 VS Code 生成文件的默认格式
[*.json]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2
